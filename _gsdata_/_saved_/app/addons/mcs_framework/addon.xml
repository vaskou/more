<?xml version="1.0"?>
<addon scheme='2.0'>
    <id>mcs_framework</id>
    <version>1.0</version>
    <name>More CS-Cart Framework</name>
    <description>More CS-Cart Framework</description>
    <priority>100</priority>
    <status>active</status>
	<queries>
		<item for="install">ALTER TABLE ?:product_tabs ADD icon VARCHAR(128);</item>
		<item for="install">ALTER TABLE ?:product_tabs ADD icon VARCHAR(128);</item>
	</queries>
    <settings layout="separate" edition_type="ROOT,ULT:VENDOR">
        <sections>
			<section id="mcs_top_menu">
                <name>Top Menu</name>
                <items>
                    <item id="mcs_fixed_menu">
                        <type>checkbox</type>
                        <name>Enable fixed menu</name>
						<default_value>Y</default_value>
                    </item>
				</items>
            </section>
			<section id="mcs_product_categories">
                <name>Product Categories</name>
                <items>
                    <item id="mcs_product_categories_hidden_info">
                        <type>checkbox</type>
                        <name>Check to hide info and show on hover</name>
						<default_value>N</default_value>
                    </item>
				</items>
            </section>
			<section id="mcs_button_icons">
                <name>Button Icons</name>
                <items>
                    <item id="mcs_button_icons_add_to_cart">
                        <type>input</type>
                        <name>"Add To Cart" button icon</name>
						<default_value>icon-im-cart</default_value>
                    </item>
					<item id="mcs_button_icons_add_to_compare_list">
                        <type>input</type>
                        <name>"Add To Compare List" button icon</name>
						<default_value>icon-im-transmission</default_value>
                    </item>
					<item id="mcs_button_icons_add_to_wishlist">
                        <type>input</type>
                        <name>"Add To Wishlist" button icon</name>
						<default_value>icon-im-heart-4</default_value>
                    </item>
					<item id="mcs_button_icons_select_options">
                        <type>input</type>
                        <name>"Select Options" button icon</name>
						<default_value>icon-im-cart</default_value>
                    </item>
				</items>
            </section>
			<section id="mcs_product_tabs">
                <name>Tabs</name>       
                <items>
                    <item id="mcs_product_tabs_vertical">
                        <type>checkbox</type>
                        <name>Vertical Tabs</name>
                        <tooltip>Check to show vertical tabs</tooltip>
                    </item>
					<item id="mcs_product_tabs_width">
                        <type>input</type>
                        <name>Vertical tabs width(%)</name>
                        <tooltip>Width of the tabs in %(limits:10-50)</tooltip>
						<default_value>36</default_value>
                    </item>
				</items>
			</section>
			<section id="mcs_block_grouping">
                <name>Block Grouping</name>       
                <items>
					<item id="mcs_tab_block_header">
						<type>header</type>
						<name>Block grouping with tabs</name>
					</item>
                    <item id="mcs_tab_block_enable">
                        <type>checkbox</type>
                        <name>Enable Tab Block Grouping</name>
                        <default_value>Y</default_value>
                    </item>
					<item id="mcs_tab_block_hover">
                        <type>checkbox</type>
                        <name>Change tab on mouse hover</name>
						<default_value>N</default_value>
                    </item>
					<item id="mcs_accordion_block_header">
						<type>header</type>
						<name>Block grouping with accordion</name>
					</item>
                    <item id="mcs_accordion_block_enable">
                        <type>checkbox</type>
                        <name>Enable Accordion Block Grouping</name>
                        <default_value>Y</default_value>
                    </item>
				</items>
			</section>
            <section id="mcs_font_icons">
                <name>Font Icons</name>
                <items>
                    <item id="mcs_fontawesome">
                        <type>checkbox</type>
                        <name>Font-Awesome</name>
						<default_value>Y</default_value>
                    </item>
					<item id="mcs_icomoon">
                        <type>checkbox</type>
                        <name>Icomoon</name>
						<default_value>Y</default_value>
                    </item>
				</items>
            </section>
			<section id="mcs_sliders">
                <name>bxSlider</name>
                <items>
                    <item id="mcs_bxslider">
                        <type>checkbox</type>
                        <name>Enable bxSlider</name>
						<default_value>Y</default_value>
                    </item>
				</items>
            </section>
        </sections>
    </settings>
	<language_variables>
        <item lang="en" id="mcs_framework">More CS-Cart Framework</item>
		<item lang="en" id="block_mcs_banners">More CS-Cart Banners</item>
        <item lang="en" id="block_mcs_banners_description">Custom Visual and text banners</item>
		<item lang="en" id="block_mcs_banners_products">More CS-Cart Banners Products</item>
        <item lang="en" id="block_mcs_banners_products_description">Custom Visual and text banners</item>
		<item lang="en" id="myslider">MySlider</item>
		<item lang="en" id="mcs_mode">Type of transition between slides</item>
		
		<item lang="en" id="mcs_speed">Slide transition duration (in ms)</item>
		<item lang="en" id="mcs_slideMargin">Margin between each slide</item>
		<item lang="en" id="mcs_startSlide">Starting slide index</item>
		<item lang="en" id="mcs_randomStart">Start slider on a random slide</item>
		<item lang="en" id="mcs_infiniteLoop">Clicking "Next" while on the last slide will transition to the first slide and vice-versa</item>
		<item lang="en" id="mcs_hideControlOnEnd">"Next" control will be hidden on last slide and vice-versa</item>
		<item lang="en" id="mcs_captions">Include image captions</item>
		<item lang="en" id="mcs_ticker">Use slider in ticker mode</item>
		<item lang="en" id="mcs_tickerHover">Ticker will pause when mouse hovers over slider</item>
		<item lang="en" id="mcs_adaptiveHeight">Dynamically adjust slider height based on each slide's height</item>
		<item lang="en" id="mcs_adaptiveHeightSpeed">Slide height transition duration (in ms)</item>
		<item lang="en" id="mcs_responsive">Enable or disable auto resize of the slider</item>
		<item lang="en" id="mcs_preloadImages">If 'All', preloads all images before starting the slider. If 'Visible', preloads only images in the initially visible slides before starting the slider</item>
		<item lang="en" id="mcs_touchEnabled">Slider will allow touch swipe transitions</item>
		<item lang="en" id="mcs_swipeThreshold">Amount of pixels a touch swipe needs to exceed in order to execute a slide transition</item>
		<item lang="en" id="mcs_oneToOneTouch">Non-fade slides follow the finger as it swipes</item>
		<item lang="en" id="mcs_preventDefaultSwipeX">Touch screen will not move along the x-axis as the finger swipes</item>
		<item lang="en" id="mcs_preventDefaultSwipeY">Touch screen will not move along the y-axis as the finger swipes</item>
		<item lang="en" id="mcs_pager">A pager will be added</item>
		<item lang="en" id="mcs_pagerType">If 'Full', a pager link will be generated for each slide. If 'Short', a x/y pager will be used</item>
		<item lang="en" id="mcs_pagerShortSeparator">If pager type is 'Short', pager will use this value as the separating character</item>
		<item lang="en" id="mcs_controls">"Next" / "Prev" controls will be added</item>
		<item lang="en" id="mcs_autoControls">"Start" / "Stop" controls will be added</item>
		<item lang="en" id="mcs_autoControlsCombine">When slideshow is playing only "Stop" control is displayed and vice-versa</item>
		<item lang="en" id="mcs_auto">Slides will automatically transition</item>
		<item lang="en" id="mcs_pause">The amount of time (in ms) between each auto transition</item>
		<item lang="en" id="mcs_autoStart">Auto show starts playing on load. If disabled, slideshow will start when the "Start" control is clicked</item>
		<item lang="en" id="mcs_autoDirection">The direction of auto show slide transitions</item>
		<item lang="en" id="mcs_autoHover">Auto show will pause when mouse hovers over slider</item>
		<item lang="en" id="mcs_autoDelay">Time (in ms) auto show should wait before starting</item>
		<item lang="en" id="mcs_minSlides">The minimum number of slides to be shown. Slides will be sized down if carousel becomes smaller than the original size</item>
		<item lang="en" id="mcs_maxSlides">The maximum number of slides to be shown. Slides will be sized up if carousel becomes larger than the original size</item>
		<item lang="en" id="mcs_moveSlides">The number of slides to move on transition. This value must be greater than minSlides, and less maxSlides. If zero (default), the number of fully-visible slides will be used.</item>
		<item lang="en" id="mcs_slideWidth">The width of each slide. This setting is required for all horizontal carousels!</item>
	</language_variables>
</addon>

