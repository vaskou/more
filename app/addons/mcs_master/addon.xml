<?xml version="1.0"?>
<addon scheme="2.0">
    <id>mcs_master</id>
    <name>More CS-Cart Master Theme</name>
    <description>Master Theme</description>
    <version>1.0</version>
    <priority>2800</priority>
    <position>100</position>
    <status>active</status>
	<settings layout="separate" edition_type="ROOT,ULT:VENDOR">
        <sections>
			<section id="mcs_products_grid">
                <name>Product Grid Options</name>
                <items>
                    <item id="mcs_features">
                        <type>checkbox</type>
                        <name>Show product features</name>
						<default_value>Y</default_value>
                    </item>
					<item id="mcs_rating">
                        <type>checkbox</type>
                        <name>Show product rating</name>
						<default_value>Y</default_value>
                    </item>
					<item id="mcs_points">
                        <type>checkbox</type>
                        <name>Show product points</name>
						<default_value>Y</default_value>
                    </item>
				</items>
            </section>
        </sections>
    </settings>
</addon>
