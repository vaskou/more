<?xml version="1.0"?>
<addon scheme='2.0'>
    <id>mcs_framework</id>
    <version>1.0</version>
    <name>More CS-Cart Framework</name>
    <description>More CS-Cart Framework</description>
    <priority>100000</priority>
    <status>active</status>
	<queries>
		<item for="install">ALTER TABLE ?:product_tabs ADD icon VARCHAR(128);</item>
		<item for="install">ALTER TABLE ?:product_tabs ADD icon VARCHAR(128);</item>
	</queries>
    <settings layout="separate" edition_type="ROOT,ULT:VENDOR">
        <sections>
			<section id="mcs_top_menu">
                <name>Top Menu</name>
                <items>
                    <item id="mcs_fixed_menu">
                        <type>checkbox</type>
                        <name>Enable fixed menu</name>
						<default_value>N</default_value>
                    </item>
					<item id="mcs_top_menu_show_images">
                        <type>checkbox</type>
                        <name>Show images in menu</name>
						<default_value>N</default_value>
                    </item>
					<item id="mcs_top_menu_hide_3rd_level">
                        <type>checkbox</type>
                        <name>Hide 3rd level menu</name>
						<default_value>N</default_value>
                    </item>
				</items>
            </section>
			<section id="mcs_product_categories">
                <name>Product Categories</name>
                <items>
					<item id="mcs_product_categories_alpha_grid">
						<type>header</type>
						<name>More CS-Cart Alpha Grid</name>
					</item>
                	<item id="mcs_product_categories_hidden_info">
                        <type>selectbox</type>
                        <name>Select how to show hidden info on hover</name>
						<variants>
							<item id="mcs_none">
                                <name>None</name>
                            </item>
							<item id="mcs_fade">
                                <name>Fade</name>
                            </item>
							<item id="mcs_show">
                                <name>Show</name>
                            </item>
                            <item id="mcs_slide">
                                <name>Slide</name>
                            </item>
						</variants>
						<default_value>mcs_none</default_value>
                    </item>
					<item id="mcs_product_categories_hidden_info_duration">
                        <type>input</type>
                        <name>Set the duration of the animation</name>
						<default_value>0</default_value>
                    </item>
					<item id="mcs_product_categories_features">
                        <type>checkbox</type>
                        <name>Show product features</name>
						<default_value>Y</default_value>
                    </item>
					<item id="mcs_product_categories_rating">
                        <type>checkbox</type>
                        <name>Show product rating</name>
						<default_value>Y</default_value>
                    </item>
					<item id="mcs_product_categories_points">
                        <type>checkbox</type>
                        <name>Show product points</name>
						<default_value>Y</default_value>
                    </item>
				</items>
            </section>
			<section id="mcs_product_tabs">
                <name>Tabs</name>       
                <items>
                    <item id="mcs_product_tabs_vertical">
                        <type>checkbox</type>
                        <name>Vertical Tabs</name>
                        <tooltip>Check to show vertical tabs</tooltip>
                    </item>
					<item id="mcs_product_tabs_width">
                        <type>input</type>
                        <name>Vertical tabs width(%)</name>
                        <tooltip>Width of the tabs in %(limits:10-50)</tooltip>
						<default_value>36</default_value>
                    </item>
				</items>
			</section>
			<section id="mcs_block_grouping">
                <name>Block Grouping</name>       
                <items>
					<item id="mcs_tab_block_header">
						<type>header</type>
						<name>Block grouping with tabs</name>
					</item>
                    <item id="mcs_tab_block_enable">
                        <type>checkbox</type>
                        <name>Enable Tab Block Grouping</name>
                        <default_value>Y</default_value>
                    </item>
					<item id="mcs_tab_block_hover">
                        <type>checkbox</type>
                        <name>Change tab on mouse hover</name>
						<default_value>N</default_value>
                    </item>
					
					<item id="mcs_accordion_block_header">
						<type>header</type>
						<name>Block grouping with accordion</name>
					</item>
                    <item id="mcs_accordion_block_enable">
                        <type>checkbox</type>
                        <name>Enable Accordion Block Grouping</name>
                        <default_value>Y</default_value>
                    </item>
				</items>
			</section>
            <section id="mcs_font_icons">
                <name>Font Icons</name>
                <items>
					<item id="mcs_font_icons_header">
						<type>header</type>
						<name>Font Icons Libraries</name>
					</item>
                    <item id="mcs_fontawesome">
                        <type>checkbox</type>
                        <name>Font-Awesome</name>
						<default_value>Y</default_value>
                    </item>
					<item id="mcs_icomoon">
                        <type>checkbox</type>
                        <name>Icomoon</name>
						<default_value>Y</default_value>
                    </item>
					
					<item id="mcs_button_icons_header">
						<type>header</type>
						<name>Button Icons</name>
					</item>
					<item id="mcs_button_icons_add_to_cart">
                        <type>input</type>
                        <name>"Add To Cart" button icon</name>
						<default_value>icon-im-cart</default_value>
                    </item>
					<item id="mcs_button_icons_add_to_compare_list">
                        <type>input</type>
                        <name>"Add To Compare List" button icon</name>
						<default_value>icon-im-bars-3</default_value>
                    </item>
					<item id="mcs_button_icons_add_to_wishlist">
                        <type>input</type>
                        <name>"Add To Wishlist" button icon</name>
						<default_value>icon-im-heart-4</default_value>
                    </item>
					<item id="mcs_button_icons_select_options">
                        <type>input</type>
                        <name>"Select Options" button icon</name>
						<default_value>icon-im-cart</default_value>
                    </item>
					
					<item id="mcs_block_icons_header">
						<type>header</type>
						<name>Block Icons</name>
					</item>
					<item id="mcs_block_icons_cart_block">
                        <type>input</type>
                        <name>Cart block icon</name>
						<default_value>icon-im-cart</default_value>
                    </item>
					<item id="mcs_block_icons_my_account_block">
                        <type>input</type>
                        <name>My Account block icon</name>
						<default_value>icon-im-user</default_value>
                    </item>
					<item id="mcs_block_icons_sign_in">
                        <type>input</type>
                        <name>Sign In icon</name>
						<default_value>icon-im-enter</default_value>
                    </item>
					<item id="mcs_block_icons_sign_out">
                        <type>input</type>
                        <name>Sign Out icon</name>
						<default_value>icon-im-exit</default_value>
                    </item>
					<item id="mcs_block_icons_register">
                        <type>input</type>
                        <name>Register icon</name>
						<default_value>icon-im-pencil-3</default_value>
                    </item>
				</items>
            </section>
			<section id="mcs_sliders">
                <name>bxSlider</name>
                <items>
                    <item id="mcs_bxslider">
                        <type>checkbox</type>
                        <name>Enable bxSlider</name>
						<default_value>Y</default_value>
                    </item>
				</items>
            </section>
			 <section id="mcs_social_links">
                <name>Social links</name>
                <items>
                    <item id="mcs_rss">
                        <type>input</type>
                        <name>RSS Feed</name>
                        <default_value>http://news.google.com/?output=rss</default_value>
                        <tooltip>Enter your rss feed url here. Leave blank to disable.</tooltip>
                        <translations>
                            <item lang="EN" for="name">RSS Feed</item>
                            <item lang="EN" for="tooltip">Enter your rss feed url here.</item>
                        </translations>
                    </item>
                    <item id="mcs_twitter">
                        <type>input</type>
                        <name>Twitter URL</name>
                        <default_value>http://www.twitter.com</default_value>
                        <tooltip>Enter your Twitter URL here. Leave blank to disable.</tooltip>
                        <translations>
                            <item lang="EN" for="name">Twitter URL</item>
                            <item lang="EN" for="tooltip">Enter your Twitter URL here</item>
                        </translations>
                    </item>
                    <item id="mcs_facebook">
                        <type>input</type>
                        <name>Facebook Profile</name>
